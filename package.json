{
  "name": "opentool",
  "version": "0.8.12",
  "description": "OpenTool framework for building serverless MCP tools",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "opentool": "dist/cli/index.js"
  },
  "scripts": {
    "build": "npm run typecheck && tsup",
    "dev": "tsx src/cli/dev.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "test": "tsx --test tests/*.test.ts",
    "prepublishOnly": "npm run typecheck && npm run build && node scripts/sync-template.ts",
    "examples:build": "node dist/cli/index.js build --input examples/full-metadata/tools --output examples/full-metadata/dist",
    "examples:metadata": "node dist/cli/index.js metadata --input examples/full-metadata/tools --output examples/full-metadata/metadata.json",
    "examples:validate": "node dist/cli/index.js validate --input examples/full-metadata/tools",
    "changeset": "changeset && bun run scripts/build-context.ts",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    "release": "npm run build && npm run changeset:publish"
  },
  "files": [
    "dist/**/*",
    "templates/**/*",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "opentool",
    "mcp",
    "tools",
    "serverless",
    "lambda"
  ],
  "author": "OpenTool",
  "homepage": "https://opentool.dev",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/openpond/opentool.git"
  },
  "bugs": {
    "url": "https://github.com/openpond/opentool/issues"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@aws/run-mcp-servers-with-aws-lambda": "^0.2.2",
    "@modelcontextprotocol/sdk": "^1.15.1",
    "@turnkey/sdk-server": "4.10.2",
    "@turnkey/viem": "0.14.5",
    "@msgpack/msgpack": "^3.1.1",
    "@noble/hashes": "^1.4.0",
    "commander": "^11.0.0",
    "esbuild": "^0.25.0",
    "tsx": "^4.0.0",
    "viem": "^2.31.7",
    "zod": "^4.1.11",
    "@alcyone-labs/zod-to-json-schema": "^4.0.10",
    "dotenv": "^17.2.3"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "workflow": "^4.0.1-beta.6"
  },
  "peerDependencies": {
    "typescript": "^5.0.0",
    "@workflow/cli": "^4.0.1-beta.6",
    "workflow": "^4.0.1-beta.6"
  },
  "peerDependenciesMeta": {
    "@workflow/cli": {
      "optional": true
    },
    "workflow": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./x402": {
      "import": "./dist/x402/index.js",
      "types": "./dist/x402/index.d.ts"
    },
    "./wallet": {
      "import": "./dist/wallet/index.js",
      "types": "./dist/wallet/index.d.ts"
    },
    "./adapters/hyperliquid": {
      "import": "./dist/adapters/hyperliquid/index.js",
      "types": "./dist/adapters/hyperliquid/index.d.ts"
    },
    "./adapters/polymarket": {
      "import": "./dist/adapters/polymarket/index.js",
      "types": "./dist/adapters/polymarket/index.d.ts"
    },
    "./store": {
      "import": "./dist/store/index.js",
      "types": "./dist/store/index.d.ts"
    },
    "./cli": {
      "import": "./dist/cli/index.js",
      "types": "./dist/cli/index.d.ts"
    },
    "./ai": {
      "import": "./dist/ai/index.js",
      "types": "./dist/ai/index.d.ts"
    }
  }
}
